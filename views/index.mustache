			<div id="mainInfo">
				<div id="logo">
					<img src="../images/home_logo3.png" alt="Twitter Logo">
				</div>

				<div id="userFields">
					<div id="title">
						<p><u>Search Tweets By:</u></p>
					</div>
					<div id="content">
						<div id="content_box">
							<form id="text_form" role="search" onsubmit="return send()" action="allTweets">
								<div id="text">
									<input id="txt" class="form-control" type="text" value="Text"
									onfocus="if (this.value=='Text') this.value = ''"  
						    		onblur="if (this.value=='') this.value = 'Text'">
								</div>
							</form>
							<form id="text_form" role="search" onsubmit="return send()" action="allTweets">
								<div id="user">
									<input id="usr" class="form-control" type="text" value="User"
									onfocus="if (this.value=='User') this.value = ''"  
						    		onblur="if (this.value=='') this.value = 'User'">
								</div>
							</form>
							<form id="text_form" role="search" onsubmit="return send()" action="allTweets">
								<div id="hashtag">
									<input id="hashtg" class="form-control" type="text" value="Hashtag #"
									onfocus="if (this.value=='Hashtag #') this.value = ''"  
						    		onblur="if (this.value=='') this.value = 'Hashtag #'">	
								</div>
							</form>
							<form id="text_form" role="search" onsubmit="return send()" action="allTweets">
								<div id="date">
									<input id="rightInput1" class="form-control" type="date" value=""
									onblur="document.getElementById('date_warning').style.visibility = 'hidden'"  
						    		onfocus="document.getElementById('date_warning').style.visibility = 'visible'">
									<!--<input id="rightInput2" class="form-control" type="date" value="">-->
									<i id="date_warning">Tweets before the given date</i>
								</div>
							</form>
							<button id="remove_all" onclick="remove_filter(this.value)" value="all">Remove All</button>
							<button type="button" onclick="send()" id="send_button">Send</button>
						</div>
						<div id="option_box">
								{{#load_options.length}}
									<div id="option">
											{{#load_options}}<button id="button_item" onclick="remove_filter(this.value)" value={{.}}>&#x274C;{{.}}</button>{{/load_options}}
									</div>
								{{/load_options.length}}
						</div>
					</div>
				</div>
			</div>

